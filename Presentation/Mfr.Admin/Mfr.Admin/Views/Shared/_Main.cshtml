@using System.Web.Optimization
@using Microsoft.AspNet.Identity
@using Mfr.Admin.App.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Shaheen Zahedi, Mahdi Roshanfekr">
    <meta name="keyword" content="Admin,Product,Product Management, Responsive">
    <link href="~/Content/img/favicon.png" rel="shortcut icon">
    <title>Product Managing Panel</title>

    <script src="~/Scripts/jquery-1.12.3.min.js"></script>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/Content/css/style.css" rel="stylesheet">
    <link href="~/Content/css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("contents", required: false)
</head>

@if (User.Identity.IsAuthenticated)
{
    <body>

            <section id="container" >
                <!--header start-->
                <header class="header white-bg">
                    <div class="sidebar-toggle-box">
                        <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
                    </div>
                    <!--logo start-->
                    <a href="#" class="logo"><span>manufacturer</span></a>
                    <!--logo end-->

                    <div class="top-nav ">
                        <!--search & user info start-->
                        <ul class="nav pull-right top-menu">
                            <!-- user login dropdown start-->
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                        <span class="username"><img src="@Url.Action("SomeImage", "Account", new {imageName = User.Identity.GetUserPictureAvatar()})" alt="" height="40" width="40" />@User.Identity.GetUserName()</span>

                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu extended logout">
                                    <div class="log-arrow-up"></div>
                                    <li><i class=" icon-suitcase"></i>@Html.ActionLink("Profile", "MainEdit", "Account")</li>
                                    <li><a href="#"><i class="icon-cog"></i> Settings</a></li>
                                    <li><a href="#"><i class="icon-bell-alt"></i> Notifications</a></li>
                                    <li>
                                        <div class="icon-key">
                                            @Html.ActionLink("LogOff", "LogOff", "Account")
                                        </div>
                                    </li>
                                </ul>
                            </li>
                            <!-- user login dropdown end -->
                        </ul>
                        <!--search & user info end-->
                    </div>
                </header>
                <!--header end-->
                <!--sidebar start-->
                <aside>
                    <div id="sidebar" class="nav-collapse ">
                        <!-- sidebar menu start-->
                        <ul class="sidebar-menu">
                            <li class="active">
                                <a class="" href=@Url.Action("Index", "Home")>
                                    <i class="icon-share-sign"></i>
                                    <span>Main Page</span>
                                </a>
                            </li>
                            <li class="sub-menu">
                                <a href="javascript:;" class="">
                                    <i class="icon-dropbox"></i>
                                    <span>Products</span>
                                    <span class="arrow"></span>
                                </a>
                                <ul class="sub">
                                    <li><a class="" href=@Url.Action("List", "Product")>   Products Main Page</a></li>
                                    <li><a class="" href=@Url.Action("Create", "Product")>  New Product</a></li>
                                    <li><a class="" href=@Url.Action("List", "Comment")> Comments</a></li>
                                </ul>
                            </li>
                            <li class="sub-menu">
                                <a href="javascript:;" class="">
                                    <i class="icon-cog"></i>
                                    <span>My Account</span>
                                    <span class="arrow"></span>
                                </a>
                                <ul class="sub">
                                    <li><a class="" href=@Url.Action("MainEdit", "Account")>My Account Main Page</a></li>
                                    <li><a class="" href=@Url.Action("List", "Address")>Addresses</a></li>
                                    <li><a class="" href=@Url.Action("List", "PhoneNumber")>Phone Numbers</a></li>
                                </ul>
                            </li>
                            @if (this.User.IsInRole("SuperAdmin"))
                            {
                                <li class="sub-menu">
                                    <a href="javascript:;" class="">
                                        <i class="icon-list-ol"></i>
                                        <span>Base Coding</span>
                                        <span class="arrow"></span>
                                    </a>
                                    <ul class="sub">
                                        <li><a class="" href=@Url.Action("List", "Country")>Countries</a></li>
                                        <li><a class="" href=@Url.Action("List", "State")>States</a></li>
                                        <li><a class="" href=@Url.Action("List", "City")>Cities</a></li>
                                        <li><a class="" href=@Url.Action("List", "ProductType")>Product Categories</a></li>
                                    </ul>
                                </li>
                                <li class="sub-menu">
                                    <a class="" href=@Url.Action("List", "User")>
                                        <i class="icon-user"></i>
                                        <span>Users</span>
                                    </a>
                                    <ul class="sub"></ul>
                                </li>
                            }
                        </ul>
                        <!-- sidebar menu end-->
                    </div>
                </aside>
                <!--sidebar end-->
                <!--main content start-->
                <section id="main-content">
                    <section class="wrapper">
                        <!--state overview start-->
                        <div class="row state-overview">

                        </div>

                        <div class="row">
                            @RenderBody();
                        </div>
                        <!--state overview end-->

                    </section>
                </section>
                <!--main content end-->
            </section>

            <!-- js placed at the end of the document so the pages load faster -->
            <script src="~/Scripts/jquery.js"></script>
            <script src="~/Scripts/jquery-1.8.3.min.js"></script>
            <script src="~/Scripts/bootstrap.min.js"></script>
            <script src="~/Scripts/jquery.scrollTo.min.js"></script>
            <script src="~/Scripts/jquery.nicescroll.js" type="text/javascript"></script>
            <script src="~/Scripts/jquery.sparkline.js" type="text/javascript"></script>
            <script src="~/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
            <script src="~/Scripts/owl.carousel.js"></script>
            <script src="~/Scripts/jquery.customSelect.min.js"></script>





            <!--common script for all pages-->
            <script src="~/Scripts/common-scripts.js"></script>
            <!--script for this page-->
            <script src="~/Scripts/sparkline-chart.js"></script>
            <script src="~/Scripts/easy-pie-chart.js"></script>

            <!-- telerik kendo ui -->

            @*<script src="~/Scripts/Kendo/jquery.min.js"></script>
            <script src="~/Scripts/Kendo/kendo.all.min.js"></script>*@

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
}
else
{
     Response.Redirect("~/Account/Login");
}
</html>


