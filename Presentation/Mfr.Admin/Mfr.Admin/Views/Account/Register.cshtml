@using System.Web.Optimization
@using Kendo.Mvc.UI
@using Mfr.Services
@using Mfr.Core
@model Mfr.Admin.Models.Account.RegisterViewModel
@{
    Layout = "~/Views/Shared/_MainTopNav.cshtml";
}
@{ ViewBag.Title = "Registration Form";}
<style>
    .text-box-size {
        width: 400px;
    }
</style>
<script>
    $(document).ready(function () {
        $('#@Html.IdFor(p => p.BirthDate)').kendoDatePicker();

        $('#@Html.IdFor(p => p.Phonenumber)').kendoMaskedTextBox({
            mask: "0000-000-00-00"
        });
    });
</script>
<section id="container" class="">
    <!--main content start-->

        <section class="wrapper">
            <!-- page start-->
            <div class="row">
                <aside class="profile-info col-lg-9">

                    <section class="panel">
                        <div class="bio-graph-heading">
                            <h2>@ViewBag.Title</h2>
                        </div>
                        <div class="panel-body bio-graph-info">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" , enctype = "multipart/form-data" }))
                            {
                              @Html.AntiForgeryToken()
                                <form class="form-horizontal" role="form">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.UserName, new {@class = "col-md-2 control-label"})
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.UserName, new {@class = "text-box-size k-textbox" })
                                            @Html.ValidationMessageFor(c => c.UserName, "", new {@class = "help-block"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Name, new {@class = "col-md-2 control-label"})
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "text-box-size k-textbox" })
                                            @Html.ValidationMessageFor(c => c.Name, "", new {@class = "help-block"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.FamilyName, new {@class = "col-md-2 control-label"})
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.FamilyName, new { @class = "text-box-size k-textbox" })
                                            @Html.ValidationMessageFor(c => c.FamilyName, "", new {@class = "help-block"})
                                        </div>
                                    </div>
                                    <br/>
                                    <div class="form-group">

                                        @Html.LabelFor(m => m.Password, new {@class = "col-md-2 control-label"})
                                        <div class="col-lg-6">
                                            @Html.PasswordFor(m => m.Password, new { @class = "text-box-size k-textbox" })
                                            @Html.ValidationMessageFor(c => c.Password, "", new {@class = "help-block"})
                                            @Html.ValidationMessage("", "", new {@class = "help-block"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
                                        <div class="col-lg-6">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-box-size k-textbox" })
                                            @Html.ValidationMessageFor(c => c.ConfirmPassword, "", new {@class = "help-block"})
                                        </div>
                                    </div>
                                    <br/>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.BirthDate, new {@class = "col-md-2 control-label"})
                                        <div class="col-lg-6">

                                            @Html.TextBoxFor(m => m.BirthDate, new { @class = "k-textbox", style = "width:50%" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label"})
                                        <div class="col-lg-6">

                                            @Html.TextBoxFor(m => m.Email, new { @class = "text-box-size k-textbox" })
                                            @Html.ValidationMessageFor(c => c.Email, "", new {@class = "help-block"})
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Phonenumber, new {@class = "col-md-2 control-label"})
                                        <div class="col-lg-6">

                                            @Html.TextBoxFor(m => m.Phonenumber, new {@class = "text-box-size k-textbox" })
                                            @Html.ValidationMessageFor(c => c.Phonenumber, "", new {@class = "help-block"})
                                        </div>
                                    </div>

                                    <div class="editor-field">
                                        @Html.TextBox("file", "", new {type = "file",@accept= "image/*" })
                                        @Html.ValidationMessage("Picture", "", new {@class = "help-block"})
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <input type="submit" class="btn btn-primary" value="Sign up"/>
                                        </div>
                                    </div>
                                </form>
                            }
                        </div>
                    </section>
                </aside>
            </div>
            <!-- page end-->
        </section>
    </section>
<!--main content end-->

@section contents
{

    <link rel="stylesheet" type="text/css" href="~/Content/assets/bootstrap-colorpicker/css/colorpicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/bootstrap-daterangepicker/daterangepicker.css" />
    <link rel="stylesheet" href="~/Content/kendo/kendo.common.min.css" />
    <link rel="stylesheet" href="~/Content/kendo/kendo.material.min.css" />
    <link rel="stylesheet" href="~/Content/kendo/kendo.rtl.min.css" />
}

@section scripts
{
<script src="~/Scripts/jquery.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/Kendo/jquery.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.all.min.js"></script>
}